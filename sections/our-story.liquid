<section id="our_story">
  <div class="container py-96 pt-0">
    <div class="border-top border-color-f0 my-5"></div>
    <div>
      <h2 class="font-36 text-color-1b line-height-48 fw-bold text-center mb-20">{{ section.settings.heading }}</h2>
      <p class="text-color-46 pb-24 text-center">
        <span class="fw-semibold">{{ section.settings.intro_highlight }}</span>{{ section.settings.intro_text }}
      </p>
    </div>

    <div class="row justify-content-between flex-xl-row gx-xl-5 gy-5">
      <!-- Timeline & Stats -->
      <div class="col-xl-6">
        <div class="d-flex flex-column h-100 justify-content-between py-4">
          <div class="d-flex flex-column gap-4">
            {% for block in section.blocks %}
              {% if block.type == 'timeline_item' %}
              <div class="d-flex gap-3">
                <div class="d-flex align-items-start pt-2">
                  <div class="rounded-circle bg-color-a2" style="min-width: 12px; width: 12px; height: 12px;"></div>
                </div>
                <div class="d-flex flex-column gap-1">
                  <h5 class="fw-semibold mb-0">{{ block.settings.title }}</h5>
                  <p class="mb-0 text-muted">{{ block.settings.description }}</p>
                </div>
              </div>
              {% endif %}
            {% endfor %}
          </div>

          <!-- Stats -->
          <div class="d-flex flex-row flex-md-row justify-content-center justify-content-md-between align-items-center gap-4 mt-5 mt-md-4">
            {% for block in section.blocks %}
              {% if block.type == 'stat' %}
              <div class="d-flex flex-column text-center text-md-start min-width-120">
                <h2 class="fw-bold mb-0 font-36">{{ block.settings.stat_value }}</h2>
                <p class="mb-0 mt-3 mt-md-0 text-muted font-16">{{ block.settings.stat_label }}</p>
              </div>
              {% unless forloop.last %}
              <div class="d-none d-md-block bg-color-a2" style="width: 5px; height: 42px;"></div>
              {% endunless %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="col-xl-6 text-xl-end text-lg-center text-md-center text-sm-center">
        <img src="{{ section.settings.image | image_url }}" alt="About Us Image" class="img-fluid w-100 mt-xl-0">
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Story",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "intro_highlight",
      "label": "Intro Highlight (Bold)",
      "default": "Founded in 2022, "
    },
    {
      "type": "textarea",
      "id": "intro_text",
      "label": "Intro Text",
      "default": " we started with a simple idea: What if we could integrate resistance bands into clothing? After countless tests, our first product was born - the Resistance Band Leggings."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    }
  ],
  "blocks": [
    {
      "type": "timeline_item",
      "name": "Timeline Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Timeline Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Timeline Description"
        }
      ]
    },
    {
      "type": "stat",
      "name": "Stat Box",
      "settings": [
        {
          "type": "text",
          "id": "stat_value",
          "label": "Stat Value",
          "default": "10,000+"
        },
        {
          "type": "text",
          "id": "stat_label",
          "label": "Stat Label",
          "default": "customers served"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Story",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
