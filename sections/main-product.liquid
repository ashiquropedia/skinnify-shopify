<!-- JS -->
<script>
  const variants = {{ product.variants | json }};
  const priceEl = document.getElementById('product-price');
  const bandRadios = document.querySelectorAll('input[name="property[Bands]"]');
  const sizeWrap = document.getElementById('size-options');
  const variantInput = document.getElementById('selected-variant-id');
  const qtyDisplay = document.getElementById('qty-display');
  const qtyInput = document.querySelector('input[name="quantity"]');

  const money = cents => '$' + (cents / 100).toFixed(2);

  document.addEventListener('DOMContentLoaded', () => {
    updateSizes(currentBand());
    selectFirstSize();
    refreshPrice();
  });

  bandRadios.forEach(radio => {
    radio.addEventListener('change', () => {
      updateSizes(currentBand());
      selectFirstSize();
      refreshPrice();
    });
  });

  document.querySelectorAll('[data-qty]').forEach(btn => {
    btn.addEventListener('click', () => {
      let qty = parseInt(qtyDisplay.innerText, 10);
      qty = btn.dataset.qty === '+' ? qty + 1 : Math.max(1, qty - 1);
      qtyDisplay.innerText = qty;
      qtyInput.value = qty;
      refreshPrice();
    });
  });

  function currentBand() {
    const checked = document.querySelector('input[name="property[Bands]"]:checked');
    return checked ? checked.value : '';
  }

  function updateSizes(band) {
    sizeWrap.innerHTML = '';
    const sizes = [...new Set(variants
      .filter(v => v.option1 === band && v.available)
      .map(v => v.option2))];

    if (sizes.length === 0) {
      sizeWrap.innerHTML = '<p class="text-danger mb-24">Sold out for this band</p>';
      variantInput.value = '';
      refreshPrice();
      return;
    }

    sizes.forEach(sizeVal => {
      const variant = variants.find(v => v.option1 === band && v.option2 === sizeVal && v.available);
      if (!variant) return;

      const btn = document.createElement('button');
      btn.type = 'button';
      btn.textContent = sizeVal;
      btn.className = 'size-btn px-34 py-12 border border-color-f0 bg-white';
      btn.addEventListener('click', () => {
        document.querySelectorAll('#size-options button').forEach(b => b.classList.remove('bg-black', 'text-white'));
        btn.classList.add('bg-black', 'text-white');
        variantInput.value = variant.id;
        refreshPrice();
      });
      sizeWrap.appendChild(btn);
    });
  }

  function selectFirstSize() {
    const first = sizeWrap.querySelector('button');
    if (first) first.click();
  }

  function refreshPrice() {
    const id = parseInt(variantInput.value, 10);
    const qty = parseInt(qtyInput.value, 10) || 1;
    const variant = variants.find(v => v.id === id);
    if (!variant) {
      priceEl.innerText = '';
      return;
    }

    const subtotal = variant.price * qty;
    const compareTo = variant.compare_at_price && variant.compare_at_price > variant.price
      ? variant.compare_at_price * qty
      : null;

    priceEl.innerHTML = money(subtotal) +
      (compareTo ? ` <s class="text-muted font-16">${money(compareTo)}</s>` : '');
  }
</script>

